<form action="/api/users" method="post" id="new_user">
    <div class="form-group">
    <label for="Name">Name    :</label>
    <input type="hidden" name="id" value="">
    <input type="text" name="name" value="" placeholder="Sagar">
  </div>

  <div class="form-group">
      <label for="Email">Email   :</label>
      <input type="email" name="email" value="" placeholder="Sagar@gmail.com">
    </div>

    <div class="form-group">
      <label for="gender" class="option_label1">Gender   :</label>
      <span >
      <input type="radio" name="gender" value="Male" >
      <label for="gender">Male</label>
  </span>
  <span>
      <input type="radio" name="gender" value="Female" >
      <label for="gender">Female</label>
  </span>
  </div>

  <div class="form-group">
      <label for="status" class="option_label2">Status  :</label>
      <span>
      <input type="radio" name="status" value="Active" >
      <label for="status">Active</label>
  </span>
  <span>
      <input type="radio" name="status" value="Inactive" >
      <label for="status">Inactive</label>
  </span>
  </div>

  <div class="form-group">
      <span>
      <button type="submit" class="button_form">Save</button>
  </span>
  <span>
      <button type="reset" class="button_form">Reset</button>
  </span>
  </div>

</form>
